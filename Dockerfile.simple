FROM golang:1.21

WORKDIR /app

# Copy go.mod and go.sum
COPY go.mod ./

# Copy the simplified main file
COPY main_simplified.go ./main.go

# Copy .env file
COPY .env ./

# Download dependencies
RUN go mod tidy

# Build the application
RUN go build -o server .

# Expose the port
EXPOSE 3000

# Run the application
CMD ["./server"]
